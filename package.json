{
  "name": "queryvault-v2",
  "version": "1.0.0",
  "description": "QueryVault - SQL Query Management Application",
  "main": "workflowy-sql-app/backend/server.js",
  "scripts": {
    "start": "node workflowy-sql-app/backend/server.js",
    "build": "echo Build completed",
    "postinstall": "cd workflowy-sql-app && npm install",
    "init-db-railway": "cd workflowy-sql-app && npm run init-db",
    "test-connection": "node -e \"require('./workflowy-sql-app/backend/config/database').testConnection().then(r => console.log('DB:', r ? 'OK' : 'FAIL'))\""
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "keywords": ["sql", "nodejs", "express", "mysql"],
  "author": "Jose Arnulfo Borja",
  "license": "MIT"
}